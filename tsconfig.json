{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "amd",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "removeComments": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}